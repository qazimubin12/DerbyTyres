@model  DerbyTyres.ViewModels.TyreListingViewModel
@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model.Tyres, rowsPerPage: 100);

}

<div class="card">
    <div class="card-body">
        <h2>Tyres</h2>
        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" placeholder="Search." value="@Model.SearchTerm">
                @Html.ValidationSummary("", new { @class = "text-danger" })



                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit"><i class="mdi mdi-account-search"></i> Search</button>
                    <a class="btn btn-outline-success" href="@Url.Action("Import", "Tyre")"><i class="mdi mdi-account-plus"></i>Import</a>

                </div>
            </div>

        </form>
        <hr />


        <div class="col col-lg-12">


            @grid.GetHtml(
                    tableStyle: "table table-responsive table-striped table-bordered",
                    columns: grid.Columns(

grid.Column(header: "ID", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="ID">@item.ID</div></text>),
grid.Column(header: "TireSizeDesignation", format:@<text><div data-id="@item.ID" data-propertyname="TireSizeDesignation">@item.TireSizeDesignation</div></text>),
grid.Column(header: "ODmm", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="ODmm">@item.ODmm</div></text>),
grid.Column(header: "ODin", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="ODin">@item.ODin</div></text>),
grid.Column(header: "SWmm", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="SWmm">@item.SWmm</div></text>),
grid.Column(header: "SWin", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="SWin">@item.SWin</div></text>),
grid.Column(header: "AR", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="AR">@item.AR</div></text>),
grid.Column(header: "SHmm", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="SHmm">@item.SHmm</div></text>),
grid.Column(header: "SHin", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="SHin">@item.SHin</div></text>),
grid.Column(header: "CLmm", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="CLmm">@item.CLmm</div></text>),
grid.Column(header: "CLin", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="CLin">@item.CLin</div></text>),
grid.Column(header: "REkm", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="REkm">@item.REkm</div></text>),
grid.Column(header: "REmile", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="REmile">@item.REmile</div></text>),
grid.Column(header: "UsedTyres", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="UsedTyres">@item.UsedTyres</div></text>),
grid.Column(header: "BrandNewTyres", format:@<text><div class="edit" data-id="@item.ID" data-propertyname="BrandNewTyres">@item.BrandNewTyres</div></text>),
grid.Column(header: "Action", format: @<a class="btn btn-warning" href="@Url.Action("Delete","Tyre",new {ID = item.ID })">DELETE</a>)
)
)




        </div>
    </div>
</div>




<style>
    .w100 {
        width: 100px;
    }

    .margin10 {
        margin-left: 10px;
    }
</style>

<script>

    $(document).ready(function () {
        var oldValue = '';
        $('.edit').editable('@Url.Action("NewAction","Tyre")', {
            cssclass: 'jeditForm',
            tooltip: 'click to edit me...',
            width: 'none',
            height: 'none',
            onsubmit: function (settings, original) {
                oldValue = original.revert;
            },
            submitdata: function () {
                return {
                    id: $(this).data('id'),
                    PropertyName: $(this).data('propertyname')
                }
            },
            callback: function (value, settings) {
                var jsonData = $.parseJSON(value);
                if (jsonData.status) {
                    $(this).text(jsonData.value);
                }
                else {
                    $(this).text(oldValue);
                }
            }
        })

       
    });


   
</script>
