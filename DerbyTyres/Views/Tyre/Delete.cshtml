@model DerbyTyres.ViewModels.TyreListingViewModel

@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <span>Delete User</span>
            </h4>

            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
            </form>
            <div class="alert alert-danger" role="alert">
                Are you sure you want to delete this Tyre?
            </div>
            <button id="actionButton" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
            <a href="@Url.Action("Index", "Tyre")" class="btn btn-secondary"><i class="fas fa-times mr-1"></i> Close</a>
        </div>

    </div>
}

<script>
	$("#actionButton").click(function () {
		$.ajax({
			url: '@Url.Action("Delete", "Tyre")',
			type: "post",
			data: $("#actionForm").serialize()
		})
		.done(function () {

				window.location.href = "@Url.Action("Index", "Tyre")";

		});
	});
</script>